# VidChain Environment Configuration
# Copy this to .env and fill in your values

# ===========================================
# PostgreSQL Database
# ===========================================
POSTGRES_PASSWORD=your-super-secret-postgres-password

# ===========================================
# Supabase JWT Configuration
# ===========================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-token-with-at-least-32-characters

# ===========================================
# Supabase Keys
# ===========================================
# Generate these using the JWT secret above
# See: https://supabase.com/docs/guides/self-hosting/docker
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ===========================================
# Realtime Configuration
# ===========================================
REALTIME_ENC_KEY=your-realtime-encryption-key
REALTIME_SECRET_KEY_BASE=your-realtime-secret-key-base

# ===========================================
# Blockchain Configuration
# ===========================================
POLYGON_NETWORK=mumbai  # or 'mainnet' for production
VIDCHAIN_CONTRACT_ADDRESS=0x...  # Deploy address
VIDCHAIN_PRIVATE_KEY=0x...  # Deployer/minter private key (keep secure!)
ALCHEMY_API_KEY=your-alchemy-api-key

# ===========================================
# IPFS (Pinata)
# ===========================================
PINATA_JWT=your-pinata-jwt-token

# ===========================================
# Video Processing (Mux)
# ===========================================
MUX_TOKEN_ID=your-mux-token-id
MUX_TOKEN_SECRET=your-mux-token-secret

# ===========================================
# Email (SMTP)
# ===========================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
SMTP_ADMIN_EMAIL=admin@vidchain.io

# ===========================================
# WalletConnect
# ===========================================
WALLETCONNECT_PROJECT_ID=your-walletconnect-project-id
